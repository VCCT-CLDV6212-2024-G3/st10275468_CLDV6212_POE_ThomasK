@{
    ViewData["Title"] = "File Page";
}
<style>
    .container{
        display:flex;
        justify-content: space-between;
        padding-top:20px;
        width: 100%;
        box-sizing:border-box;
       
    }

    .div1, .div2 {
        flex: 1; 
    }
    .div1 {
    
    margin-right: 10px;
    padding-left: 106px;
    }
    .div2{
        
        padding-left:200px
   
    }
    .div3{
       
    padding-top: 100px;
    padding-left: 113px;
    }
    h {
        
        font-size:23px;
    }
    .space {
        padding-top:10px;
    }
    h1{
        padding-top:20px;
        padding-left: 113px;
    }
