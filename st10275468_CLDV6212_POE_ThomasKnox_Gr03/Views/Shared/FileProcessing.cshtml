<h1>Upload product images or contracts:</h1>
<div class=" container">

    
    <div class="div1">

        <h>Upload contracts: </h>
        <form asp-action="UploadFile" asp-controller="FileProcessing" method="post" enctype="multipart/form-data" class=" space">
            <input type="file" name="file" />
            <button type="submit">Upload</button>
        </form>
    </div>
    <div class="div2">
        <h>Upload product images: </h>
        <form asp-action="UploadMedia" asp-controller="FileProcessing" method="post" enctype="multipart/form-data" class=" space">
            <input type="file" name="file" />
            <button type="submit">Upload</button>
        </form>
    </div>
   
</div>



<div class=" div3">
    <h2>Process orders below:</h2>
    <form asp-action="ProcessOrder" asp-controller="FileProcessing" method="post" class=" space">
        <input type="text" name="orderID" placeholder="Order ID" />
        <button type="submit">Process</button>
    </form>

</div>